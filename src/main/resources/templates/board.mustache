{{>layout/header}}

    <h1>Spring Boot Board</h1>

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <h3>==테이블 글 등록 하기==</h3>
                <br>
                <a role="button" href="/board/write">WRITE</a>
            </div>
        </div>
        <br>
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>#NO</th>
                <th>Title</th>
                <th>Writer</th>
                <th>Write Date</th>
                <th>Modify Date</th>
                <th>Attached File</th>
            </tr>
            </thead>
            <tbody>
            {{#boardMap}}
                <tr>
                    <th><a href="/board/{{BoardDTO.boardId}}" style="text-decoration : none;">{{BoardDTO.boardId}}</a></th>
                    <th>{{BoardDTO.title}}</th>
                    <th>{{BoardDTO.writer}}</th>
                    <th>{{BoardDTO.regTime}}</th>
                    <th>{{BoardDTO.modTime}}</th>
                    <th style="padding:5px;">
                    {{#isAttached}}
                        <img id="attached_{{BoardDTO.boardId}}" src="/images/attached_thumbnail.png"
                             style="width:50px; height:50px;">
                    {{/isAttached}}
                    </th>
                </tr>
            {{/boardMap}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}